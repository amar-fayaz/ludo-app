#:kivy 1.0.6
#:import HomeScreen src.screens.home_screen.HomeScreen
#:include src/join_game.kv

<MDTextButton@HomeScreen>:
    font_size: "38"

<HomeScreen>:
    name: "home"
    canvas.before:
        Color: 
            rgba: 0.129, 0.129, 0.129, 1
        Rectangle:
            pos: self.pos
            size: self.size

    MDTextButton:
        text: "Start"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        on_release: root.show_join_confirmation()

    MDTextButton:
        text: "Quit"
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        on_release: root.show_exit_confirmation()


