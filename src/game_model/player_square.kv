#:kivy 1.0.6
#:import PlayerSquare src.game_model.player_square.PlayerSquare
#:import UNIT_SQUARE_DIMENSION src.data.config.UNIT_SQUARE_DIMENSION

#:import App kivy.app.App

#:include src/game_model/base_pin.kv

<PlayerSquare>:
    outer_square: outer
    inner_square: inner
    pin1        : pin1
    pin2        : pin2
    pin3        : pin3
    pin4        : pin4
    size_hint   : None, None
    pos         : self.pos
    size        : self.dimension, self.dimension


    GameSquare:
        id        : outer
        pos       : root.pos
        size      : root.dimension, root.dimension
        fill_color: PLAYER_COLOR_WHEEL[root.color]

        GameSquare:
            id      : inner
            size    : root.dimension * 0.7, root.dimension * 0.7
            pos_hint: {"center_y": 0.5, "center_x": 0.5}

            BasePin:
                id : pin1
                color: root.color
                pos_hint: {"center_x": 0.25, "center_y":0.75}

            BasePin:
                id : pin2
                color: root.color
                pos_hint: {"center_x": 0.75, "center_y":0.75}

            BasePin:
                id : pin3
                color: root.color
                pos_hint: {"center_x": 0.75, "center_y":0.25}

            BasePin:
                id : pin4
                color: root.color
                pos_hint: {"center_x": 0.25, "center_y":0.25}
